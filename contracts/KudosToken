pragma solidity ^0.8.20;

contract KudosToken {
    string public name = "KudosToken";
    string public symbol = "KUDOS";
    uint8 public decimals = 18;
    mapping(address => uint256) public balanceOf;
    event Kudos(address indexed to, uint256 amount);

    function sendKudos(address to, uint256 amount) external {
        // simple: mint directly to recipient
        balanceOf[to] += amount;
        emit Kudos(to, amount);
    }

    function transfer(address to, uint256 amount) external returns (bool) {
        require(balanceOf[msg.sender] >= amount, "insufficient");
        balanceOf[msg.sender] -= amount;
        balanceOf[to] += amount;
        return true;
    }
}
