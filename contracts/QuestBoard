pragma solidity ^0.8.20;

contract QuestBoard {
    struct Quest { address creator; string title; bool done; uint256 completions; }
    Quest[] public quests;

    event Created(uint256 id, string title);
    event Completed(uint256 id, address who);

    function createQuest(string calldata title) external {
        quests.push(Quest(msg.sender, title, false, 0));
        emit Created(quests.length - 1, title);
    }

    function completeQuest(uint256 id) external {
        require(id < quests.length, "no quest");
        quests[id].completions++;
        emit Completed(id, msg.sender);
    }

    function total() external view returns (uint256) { return quests.length; }
}
