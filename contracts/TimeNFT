pragma solidity ^0.8.20;
contract TimeNFT {
    struct T { address who; uint ts; string note; }
    T[] public items;
    function mint(string calldata note) external { items.push(T(msg.sender,block.timestamp,note)); }
    function total() external view returns(uint){ return items.length; }
    function get(uint i) external view returns(address,uint,string memory){ T storage t=items[i]; return (t.who,t.ts,t.note); }
}
