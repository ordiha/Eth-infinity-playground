pragma solidity ^0.8.20;

contract SoulboundNFT {
    uint256 public nextId = 1;
    mapping(uint256 => address) public ownerOf;
    mapping(uint256 => string) public noteOf;

    event Minted(address indexed to, uint256 id, string note);

    function mint(string calldata note) external {
        uint256 id = nextId++;
        ownerOf[id] = msg.sender;
        noteOf[id] = note;
        emit Minted(msg.sender, id, note);
    }

    // no transfer functions â€” soulbound by design
    function read(uint256 id) external view returns (address, string memory, uint256) {
        return (ownerOf[id], noteOf[id], block.timestamp);
    }
}
