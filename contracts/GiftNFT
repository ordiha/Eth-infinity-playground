pragma solidity ^0.8.20;

contract GiftNFT {
    string public name = "GiftNFT";
    string public symbol = "GIFT";
    uint256 public nextId;
    mapping(uint256 => address) public ownerOf;
    mapping(uint256 => string) public meta;

    event Minted(address indexed who, uint256 id, string message);

    function mint(string calldata message) external {
        uint256 id = nextId++;
        ownerOf[id] = msg.sender;
        meta[id] = message;
        emit Minted(msg.sender, id, message);
    }

    function tokenMeta(uint256 id) external view returns (string memory) {
        return meta[id];
    }
}
