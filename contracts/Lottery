pragma solidity ^0.8.20;
contract LotteryOpen {
    address[] public players;
    function buyTicket() external payable { players.push(msg.sender); }
    function pickWinner() external {
        require(players.length>0,"none");
        uint idx = uint(keccak256(abi.encodePacked(block.timestamp, block.prevrandao, players.length))) % players.length;
        payable(players[idx]).transfer(address(this).balance);
        delete players;
    }
    function count() external view returns(uint){ return players.length; }
}
